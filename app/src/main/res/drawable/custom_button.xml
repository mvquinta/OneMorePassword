<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 15dp Shadow -->
    <item android:left="4px">
        <shape  android:shape="rectangle">
            <!--            Button Shadow Color -->
            <solid android:color="#8dc0bf" />
            <padding android:right="3dp" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <!-- White Top color -->
    <item android:bottom="9px">
        <shape  android:shape="rectangle">
            <padding android:bottom="10dp"
                android:top="10dp"
                android:left="20dp"
                android:right="20dp"/>
            <!--            Button TOP Color -->
            <solid android:color="#17737f" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>


